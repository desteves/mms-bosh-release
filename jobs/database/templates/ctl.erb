#!/bin/bash

RUN_DIR=/var/vcap/sys/run/database
LOG_DIR=/var/vcap/sys/log/database
PIDFILE=${RUN_DIR}/pid
DATA_DIR=/var/vcap/store/database
APP_DIR=/var/vcap/packages/mongodb-3.6.1

case $1 in

  start)
    mkdir -p ${RUN_DIR} ${LOG_DIR} ${DATA_DIR}
    chown -R vcap:vcap ${RUN_DIR} ${LOG_DIR} ${DATA_DIR}
    echo $$ > ${PIDFILE}
    # Not using the .conf file, instead passing values from the properties
    # via the command line. This is to avoid unecessary redundancy.
    # Also, redirecting the output to the log files below.
    exec ${APP_DIR}/bin/mongod --port <%= properties.database.port %> --dbpath <%= properties.database.dbPath  %> \
       >> $LOG_DIR/database.stdout.log \
      2>> $LOG_DIR/database.stderr.log
    ;;

  stop)
    # Note, this solution may not always work if we have a replica set and no
    # eligible primary. TODO add extra logic to handle ^^^^
    ${APP_DIR}/bin/mongod <%= properties.database.port %> --shutdown
    kill -9 ${PIDFILE} 1>/dev/null 2>&1
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
