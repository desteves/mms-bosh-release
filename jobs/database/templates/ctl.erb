#!/bin/bash

RUN_DIR=/var/vcap/sys/run/database
LOG_DIR=/var/vcap/sys/log/database
PIDFILE=${RUN_DIR}/pid
DATA_DIR=/var/vcap/store/database

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR $DATA_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR $DATA_DIR
    echo $$ > $PIDFILE
    exec /var/vcap/packages/mongodb-3.6.1/bin/mongod --port <%= properties.database.port %> --dbpath <%= properties.database.dbPath  %> \
       >> $LOG_DIR/database.stdout.log \
      2>> $LOG_DIR/database.stderr.log
    ;;

  stop)
    /var/vcap/packages/mongodb-3.6.1/bin/mongod <%= properties.database.port %> --shutdown
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
